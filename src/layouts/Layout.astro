---
import "../styles/global.css";
import { Header } from "@/components/layout/Header";
import { Toaster } from "@/components/ui/sonner";

interface Props {
  title?: string;
}

const { title = "10x Astro Starter" } = Astro.props;
const { user } = Astro.locals;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Language Learning Buddy - Narzędzie do nauki języka angielskiego z analizą błędów gramatycznych przez AI"
    />
    <title>{title}</title>
  </head>
  <body>
    <Header user={user} client:load />
    <slot />
    <Toaster richColors client:load />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
