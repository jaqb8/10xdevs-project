---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "Language Learning Buddy" } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon-white.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Language Learning Buddy - Narzędzie do nauki języka angielskiego z analizą błędów gramatycznych przez AI"
    />
    <title>{title}</title>
    <script is:inline>
      const getThemePreference = () => {
        // eslint-disable-next-line prettier/prettier
        if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
          return localStorage.getItem("theme");
        }
        return window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light";
      };
      const isDark = getThemePreference() === "dark";
      document.documentElement.classList[isDark ? "add" : "remove"]("dark");

      if (typeof localStorage !== "undefined") {
        const observer = new MutationObserver(() => {
          const isDark = document.documentElement.classList.contains("dark");
          localStorage.setItem("theme", isDark ? "dark" : "light");
        });
        observer.observe(document.documentElement, { attributes: true, attributeFilter: ["class"] });
      }
    </script>
  </head>
  <body class="flex flex-col min-h-screen">
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
