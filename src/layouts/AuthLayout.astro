---
import Layout from "./Layout.astro";
import { Toaster } from "@/components/ui/sonner";
import { AuthInitializer } from "@/components/shared/AuthInitializer";

interface Props {
  title?: string;
}

const { title = "Language Learning Buddy" } = Astro.props;
---

<Layout title={title}>
  <AuthInitializer user={null} client:only="react" />
  <header class="py-4 px-8">
    <a href="/" class="flex items-center gap-2">
      <img
        src="https://deifkwefumgah.cloudfront.net/shadcnblocks/block/logos/shadcnblockscom-icon.svg"
        class="max-h-8 dark:invert"
        alt="Language Learning Buddy"
      />
      <span class="text-xl font-semibold tracking-tighter">Language Learning Buddy</span>
    </a>
  </header>
  <main class="min-h-[calc(100vh-5rem)] flex items-center justify-center bg-background px-4 py-12">
    <slot />
  </main>
  <Toaster richColors client:load />
</Layout>
